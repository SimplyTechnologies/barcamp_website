section.schedule.timetable
    .container.container-fixed
        .row
            .col-md-12.col-xs-12
                h1 Timetable

    .container.timetable-container
        .timetable
            .day
                a.btn.btn-link(ng-repeat="day in days", href="javascript:void(0)", ng-click="timetable.getEventByDay(day)", ng-class="selectedDay === day ? 'selected' : ''") Day {{day}}
                    .circle
            .t-t.hidden-xs.to-center
                ul.timetable-room
                    li(ng-repeat="room in rooms") {{room}}
                .clearfix
                ul(ng-repeat="room in roomKeys", ng-class="room.trim().replace(' ','_').toLowerCase()")

                    li.bg-cream
                    li.bg-cream
                    li.bg-cream
                    li.bg-cream
                    li.bg-cream
                    li.bg-cream
                    li.bg-cream
                    li.bg-cream
                    li.completed(ng-repeat="event in scheduleRooms[room]", ng-style="{ top: event.top, height: event.height }")
                        .table-content
                            p {{event[currentLang].topic}}
                            .time
                                span {{event.time_from.date | amDateFormat: 'HH:mm'}} - {{event.time_to.date | amDateFormat: 'HH:mm'}}
                            .creator
                                //span(translate='home.by') &nbsp;
                                span {{event[currentLang].speaker}}
                    //li.completed(ng-repeat="event in scheduleRooms[room]", data-animation='am-fade-and-scale', data-placement='center', bs-modal='modal', data-template='/build/views/schedule-modal.html', ng-style="{top:'{{event.top}}', height:'{{event.height}}'}")


            .t-t-xs.visible-xs
                select.form-control(ng-model="selectedRoom", ng-options="room as (room.trim().replace('_', ' ') | uppercase) for room in roomKeys")
                .row
                    .col-xs-6.col-xs-push-3
                        .row
                            .col-xs-12.scheduled-room.bg-cream(ng-repeat="event in scheduleRooms[selectedRoom]")
                                .table-content
                                    p {{event[currentLang].topic}}
                                    .time
                                        span {{event.time_from.date | amDateFormat: 'HH:mm'}} - {{event.time_to.date | amDateFormat: 'HH:mm'}}
                                    .creator
                                        //span(translate='home.by') &nbsp;
                                        span {{event[currentLang].speaker}}

            .clearfix
            .empty

